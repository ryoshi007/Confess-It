<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="111.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.confessit.MenuBarControlller">
   <children>
      <HBox fx:id="menubar" alignment="CENTER" layoutX="561.0" layoutY="34.0" prefHeight="42.0" prefWidth="415.0" spacing="75.0">
         <children>
            <Button fx:id="homepageButton" mnemonicParsing="false" onMouseClicked="#goToHomepage" prefHeight="35.0" prefWidth="40.0" styleClass="menu-btn" stylesheets="@styling.css">
               <graphic>
                  <ImageView fitHeight="36.0" fitWidth="41.0" preserveRatio="true">
                     <image>
                        <Image url="@../fxml-resources/mainpage_homeButton.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <tooltip>
                  <Tooltip text="Homepage" />
               </tooltip>
            </Button>
            <Button fx:id="writeConfessionButton" mnemonicParsing="false" onMouseClicked="#goToSubmitPage" prefHeight="35.0" prefWidth="40.0" styleClass="menu-btn" stylesheets="@styling.css">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <tooltip>
                  <Tooltip text="Write confession" />
               </tooltip>
               <graphic>
                  <ImageView fitHeight="36.0" fitWidth="41.0" preserveRatio="true">
                     <image>
                        <Image url="@../fxml-resources/write-icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="searchButton" mnemonicParsing="false" onMouseClicked="#goToSearchPage" prefHeight="35.0" prefWidth="40.0" styleClass="menu-btn" stylesheets="@styling.css">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <tooltip>
                  <Tooltip text="Search" />
               </tooltip>
               <graphic>
                  <ImageView fitHeight="36.0" fitWidth="41.0" preserveRatio="true">
                     <image>
                        <Image url="@../fxml-resources/search-icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="profilePageButton" mnemonicParsing="false" onMouseClicked="#goToProfilePage" prefHeight="35.0" prefWidth="40.0" styleClass="menu-btn" stylesheets="@styling.css">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <tooltip>
                  <Tooltip text="Profile Page" />
               </tooltip>
               <graphic>
                  <ImageView fitHeight="36.0" fitWidth="41.0" preserveRatio="true">
                     <image>
                        <Image url="@../fxml-resources/mainpage_personalProfileButton.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="logOutButton" mnemonicParsing="false" onMouseClicked="#goToLogOut" prefHeight="35.0" prefWidth="40.0" styleClass="menu-btn" stylesheets="@styling.css">
               <graphic>
                  <ImageView fitHeight="34.0" fitWidth="34.0" preserveRatio="true">
                     <image>
                        <Image url="@../fxml-resources/mainpage_exitButton.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <tooltip>
                  <Tooltip text="Log out" />
               </tooltip>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
